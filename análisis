    <script>
        // Tab Functionality
        function openTab(evt, tabName) {
            var i, tabContent, tabBtn;
            
            // Hide all content
            tabContent = document.getElementsByClassName("tab-content");
            for (i = 0; i < tabContent.length; i++) {
                tabContent[i].style.display = "none";
                tabContent[i].classList.remove("active");
            }

            // Reset buttons
            tabBtn = document.getElementsByClassName("tab-btn");
            for (i = 0; i < tabBtn.length; i++) {
                tabBtn[i].className = tabBtn[i].className.replace(" active-tab-btn", "");
                tabBtn[i].style.borderBottomColor = "transparent";
                tabBtn[i].style.color = "#64748b"; // slate-500
            }

            // Show current
            document.getElementById(tabName).style.display = "block";
            setTimeout(() => document.getElementById(tabName).classList.add("active"), 10);
            
            // Style active button
            evt.currentTarget.className += " active-tab-btn";
            evt.currentTarget.style.borderBottomColor = "#0F766E"; // teal-700
            evt.currentTarget.style.color = "#0F766E";
        }

        // Radar Chart Initialization
        document.addEventListener('DOMContentLoaded', function() {
            // Select the first tab by default to ensure styles apply
            const defaultTab = document.querySelector('.active-tab-btn');
            if(defaultTab) {
                defaultTab.style.borderBottomColor = "#0F766E";
                defaultTab.style.color = "#0F766E";
            }

            const ctx = document.getElementById('marketFocusChart').getContext('2d');
            new Chart(ctx, {
                type: 'radar',
                data: {
                    labels: [
                        'Soporte (Inbound)', 
                        'Ventas (Outbound)', 
                        'Previsibilidad Costos', 
                        'Facilidad Setup', 
                        'Tecnolog칤a Propia', 
                        'Enfoque Enterprise'
                    ],
                    datasets: [{
                        label: 'Decagon',
                        data: [95, 20, 40, 50, 90, 100],
                        fill: true,
                        backgroundColor: 'rgba(99, 102, 241, 0.2)', // Indigo
                        borderColor: 'rgb(99, 102, 241)',
                        pointBackgroundColor: 'rgb(99, 102, 241)',
                        pointBorderColor: '#fff',
                        pointHoverBackgroundColor: '#fff',
                        pointHoverBorderColor: 'rgb(99, 102, 241)'
                    }, {
                        label: 'Utoppia',
                        data: [60, 95, 90, 95, 85, 70],
                        fill: true,
                        backgroundColor: 'rgba(15, 118, 110, 0.2)', // Teal
                        borderColor: 'rgb(15, 118, 110)',
                        pointBackgroundColor: 'rgb(15, 118, 110)',
                        pointBorderColor: '#fff',
                        pointHoverBackgroundColor: '#fff',
                        pointHoverBorderColor: 'rgb(15, 118, 110)'
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    elements: { line: { borderWidth: 3 } },
                    scales: {
                        r: {
                            angleLines: { color: '#e2e8f0' },
                            grid: { color: '#e2e8f0' },
                            pointLabels: {
                                font: { size: 10, family: 'Inter' },
                                color: '#64748b'
                            },
                            ticks: { display: false }
                        }
                    },
                    plugins: {
                        legend: { position: 'bottom', labels: { usePointStyle: true } }
                    }
                }
            });
        });
    </script>
